<div class="mt-4">
     <div class="row">
        {{#each books}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-book-item">
                <a href="/books/{{this.slug}}">
                    <img class="card-img-top book-img" src={{this.image}} alt="Card image cap">
                </a>
                
                <div class="card-body">
                    <a href="/books/{{this.slug}}"></a>
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Đọc sách</a>
                </div>
            </div>
        </div>
        {{/each}}
     </div>
</div>